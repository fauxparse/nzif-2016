.participant{role: :listitem}
  = icon(:vpn_key, rel: :admin, title: t('.admin')) if participant.admin?
  = icon(:verified_user, rel: :verified, title: t('.verified')) if participant.verified_user?
  = link_to participant, edit_admin_user_path(participant), rel: :edit
  - if participant.registered?
    = link_to festival.name, admin_participant_registration_path(festival, participant), role: :button, rel: :registration
  - else
    = link_to t('.register'), new_admin_participant_registration_path(festival, participant), role: :button, rel: :register
