!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title NZIF
    = csrf_meta_tags
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800|Passion+One'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.top-navigation
      .inner
        = homepage_link
        - if signed_in?
          = link_to t('header.authentication.log_out'), logout_path, method: :delete
        - else
          = link_to t('header.authentication.log_in'), login_path
    = yield
