%table.main{:cellpadding => '0', :cellspacing => '0', :width => '100%'}
  %tr
    %td.alert
      = t('.registered', festival: @festival)
  %tr
    %td.content-wrap
      %table{:cellpadding => '0', :cellspacing => '0', :width => '100%'}
        %tr
          %td.content-block
            = t('.greeting', name: @participant.name)
        %tr
          %td.content-block
            = t('.copy')
        %tr
          %td.content-block
            = link_to t('.itinerary_link'), edit_itinerary_url(@festival), class: 'btn-primary'
        = render 'thanks'
