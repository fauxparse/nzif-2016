- content_for :title, t('.title')

%header
  .inner
    %h1= t('.title')

%section.itinerary
  .inner
    %section.list
      = render partial: "itinerary", object: @itinerary

    %aside
      %ul
        = menu_link t('.edit'), edit_itinerary_path, :local_activity
        = menu_link t('.add_to_calendar'), calendar_path(@itinerary.registration, format: :ics), :event
        = menu_link t('.download'), itinerary_path(format: :pdf), :file_download
        = menu_link t('.email'), email_itinerary_path, :email, rel: 'email-itinerary', method: :post, remote: true
